<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutContentLista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundogeometrico"
    tools:context="com.example.mathe.controlefuncionarios.Listas.ListaCargos">

    <ListView
        android:id="@+id/cargoList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></ListView>

    <Button
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_weight="0"
        android:background="@drawable/formatobotao"
        android:onClick="onClickAdicionarCargo"
        android:text="adicionar"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        />

</LinearLayout>